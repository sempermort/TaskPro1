<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="TaskPro1.Controls.PriceView"  
             Padding="20"  
             Spacing="15"  
             BackgroundColor="White"  
             x:Name="mainLayout">  
    <CarouselView x:Name="carrouselList"  
                  ItemsSource="{Binding PriceOptions}">  
        <CarouselView.ItemTemplate>  
            <DataTemplate>  
                <StackLayout Padding="0,5">  
                    <Label Text="{Binding Category}"  
                           HorizontalOptions="Center"  
                           TextColor="Black"/>  
                    <Label Text="{Binding CategoryDescription}"  
                           HorizontalOptions="Center"  
                           TextColor="Gray"/>  
                    <StackLayout BindingContext="{Binding PriceDetails}"  
                                 Spacing="45"  
                                 Orientation="Horizontal"  
                                 HorizontalOptions="Center">  
                        <Border WidthRequest="70"  
                                HeightRequest="70"  
                                StrokeShape="Ellipse"  
                                Stroke="Gray"  
                                Padding="0"  
                                Margin="0">  
                            <Image Source="{Binding Icon}"  
                                   Aspect="AspectFit"  
                                   HeightRequest="70"  
                                   WidthRequest="70"  
                                   VerticalOptions="Center"  
                                   HorizontalOptions="Center"/>  
                        </Border>  

                        <Border BackgroundColor="Black"  
                                Margin="0,-10,0,0"  
                                HorizontalOptions="Center"  
                                Padding="10,5" 
                                StrokeThickness="0"  
                                Stroke="Transparent">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15"/>
                            </Border.StrokeShape>
                            <Label Text="{Binding Type}"  
                                   HorizontalOptions="Center"  
                                   TextColor="White"/>  
                        </Border>  

                        <Label Text="{Binding Price, StringFormat='USD {0}'}"  
                               HorizontalOptions="Center"  
                               FontSize="17"/>  

                        <Label Text="{Binding ArrivalETA}"  
                               HorizontalOptions="Center"  
                               TextColor="Gray"  
                               FontSize="14"/>  
                    </StackLayout>  
                </StackLayout>  
            </DataTemplate>  
        </CarouselView.ItemTemplate>  
    </CarouselView>  

    <BoxView Margin="0,5,0,0"  
             Color="LightGray"  
             HeightRequest="1"/>  

    <StackLayout Orientation="Horizontal">  
        <Image Source="masterCardIcon"  
               HeightRequest="40"  
               Aspect="AspectFit"/>  
        <Label Text=".... 6572"  
               VerticalOptions="Center"/>  
        <Label Text=""  
               VerticalOptions="Center"/>  

        <Image Source="ic_user"  
               HeightRequest="25"  
               Aspect="AspectFit"/>  
        <Label Text="1-4"  
               TextColor="Gray"  
               VerticalOptions="Center"/>  
    </StackLayout>  

    <Button Text="{Binding PriceOptionSelected.Tag, StringFormat='CONFIRM {0}'}"  
            BackgroundColor="Black"  
            CornerRadius="0"  
            Padding="5"  
            Command="{Binding StartRouteCommand}"  
            TextColor="White"  
            FontSize="20"/>  
</StackLayout>