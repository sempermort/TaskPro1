<?xml version="1.0" encoding="UTF-8"?>
<ListView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
         x:Class="TaskPro1.Controls.SearchContentView"
         BackgroundColor="White"
         VerticalOptions="Fill"
         SelectedItem="{Binding PlaceSelected, Mode=TwoWay}"
         x:Name="list"
         ItemSelected="list_ItemSelected"
         ItemsSource="{Binding Places}"
         HasUnevenRows="true"
         SeparatorColor="Gray">
    <ListView.ItemTemplate>
        <DataTemplate>
            <ViewCell>
                <Grid Padding="20,15"
                      RowSpacing="2"
                      ColumnSpacing="20"
                      RowDefinitions="Auto, Auto"
                      ColumnDefinitions="Auto, *">
                    <Image Source="ic_recentlocation"
                           Grid.Row="0"
                           Grid.Column="0"
                           Grid.RowSpan="2"
                           HeightRequest="35"
                           WidthRequest="35"
                           VerticalOptions="Start"/>

                    <Label LineBreakMode="MiddleTruncation"
                           Text="{Binding StructuredFormatting.MainText}"
                           Grid.Row="0"
                           Grid.Column="1"/>

                    <Label LineBreakMode="MiddleTruncation"
                           FontSize="14"
                           Text="{Binding StructuredFormatting.SecondaryText}" 
                           TextColor="Gray" 
                           Grid.Row="1"
                           Grid.Column="1"/>
                </Grid>
            </ViewCell>
        </DataTemplate>
    </ListView.ItemTemplate>
</ListView>